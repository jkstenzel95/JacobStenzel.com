  .video-panel
    background-color #674c5c
    @media (min-width: $screen-sm)
      background-image url(http://www.transparenttextures.com/patterns/otis-redding.png)
    border-radius 15px
    box-shadow 1px 1px 1px 1px #4c3845 inset
    padding 10px 10px 10px 10px
    color #2c2027
    
    .video-wrapper
      width 100%
      padding-bottom 65.25%
      position relative
      
      iframe
        background-color #000
        position absolute
        top: 0; bottom: 0; 
        width 100%
        height 100%
    
  .video-caption
    h1
      color #f1f6fc
      padding 10px 15px 10px 15px
      font-size 30px

    
