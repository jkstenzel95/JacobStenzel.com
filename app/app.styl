// Fonts
@import url('http://fonts.googleapis.com/css?family=Josefin+Sans:400,600,700')

// ----------------USEFUL CONSTANTS----------------

// Extra small screen / phone
$screen-xs = 480px
$screen-xs-max = 767px
// Small screen / tablet
$screen-sm = 768px
$screen-sm-max = 480px
// Medium screen / desktop
$screen-md = 992px
$screen-md-max = 1199px
// Large screen / wide desktop
$screen-lg = 1200px

// ----------------END USEFUL CONSTANTS----------------


// Font fix
body {
  -webkit-animation-duration: 0.1s;
  -webkit-animation-name: fontfix;
  -webkit-animation-iteration-count: 1;
  -webkit-animation-timing-function: linear;
  -webkit-animation-delay: 0.1s;
}

@-webkit-keyframes fontfix {
  from { opacity: 1; }
  to { opacity: 1; }
}

// ----------------MIXINS----------------


vendor-blur(blurAmt)
  -webkit-filter blur(blurAmt)
  -moz-filter blur(blurAmt)
  -o-filter blur(blurAmt)
  -ms-filter blur(blurAmt)
  filter blur(blurAmt)
  
vendor-transition-property(properties)
  -webkit-transition-property properties
  -moz-transition-property properties
  -o-transition-property properties
  transition-property properties

vendor-transition-duration(duration)
  -webkit-transition-duration duration
  -moz-transition-duration duration
  -o-transition-duration duration
  transition-duration duration

vendor-transition-timing-function(t-function)
  -webkit-transition-timing t-function
  -moz-transition-timing t-function
  -o-transition-timing t-function
  transition-timing t-function

vendor-transition-delay(delay)
  -webkit-transition-delay delay;
  -moz-transition-delay delay;
  -o-transition-delay delay;
  transition-delay delay;

// ----------------END MIXINS----------------


// ----------------RULES------------------

div.logo
  line-height 150%
  font-family 'Josefin Sans', sans-serif
  font-weight 400
  color #608de6
  position absolute
  top 0px
  vendor-transition-property(all)
  vendor-transition-timing-function(ease-in-out)
  vendor-transition-duration(0.5s)
  vendor-transition-delay(0s)
  
  &.welcome_position
    top 160px
    vendor-transition-delay(0.15s)
    
  @media (max-width: $screen-xs-max)
    font-size 32px
    padding-left 8px
  @media (min-width: $screen-sm)
    font-size 40px
    padding-left 8px

  ul
    list-style none
    margin 0px
    padding 0px
    
    a
      color #83a6ec
      text-decoration none
      &:hover
        color #A4BEF1
        text-decoration underline
      &:active
        text-decoration underline

    & > li 
      display inline


      &:before 
        content " | "

      &:nth-child(1)
        a
          color #608de6
          text-decoration none
          &:hover
            color #608de6
            text-decoration underline
          &:active
            text-decoration underline

        &:before
          content ""
  
div.logo-descriptor
  line-height 150%
  font-family 'Josefin Sans', sans-serif
  font-weight 600
  font-size 32px
  color #afa7d4
  padding-left 8px
  position absolute
  top 220px

html, body
  height 100%
  width 100%

.site-background
  background-image url('images/cube1-960x543.JPG')
  background-size cover
  height -moz-calc(100% + 10px);
  height -webkit-calc(100% + 10px);
  height -o-calc(100% + 10px);
  height calc(100% + 10px);
  width -moz-calc(100% + 20px);
  width -webkit-calc(100% + 20px);
  width -o-calc(100% + 20px);
  width calc(100% + 20px);
  margin-top -5px
  margin-right -10px
  margin-bottom -5px
  margin-left -10px
  vendor-blur(5px)
  
  
.site-background-frame
  overflow hidden
  z-index 1
  height 100%
  width 100%

.site-foreground
  height 100%
  width 100%
  position absolute
  left 0
  top 0
  z-index 2
  
//----------------END RULES-----------------