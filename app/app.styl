// Fonts
@import url('http://fonts.googleapis.com/css?family=Josefin+Sans:400,600,700')

// ----------------USEFUL CONSTANTS----------------

// Extra small screen / phone
$screen-xs = 480px
$screen-xs-max = 767px
// Small screen / tablet
$screen-sm = 768px
$screen-sm-max = 480px
// Medium screen / desktop
$screen-md = 992px
$screen-md-max = 1199px
// Large screen / wide desktop
$screen-lg = 1200px

// ----------------END USEFUL CONSTANTS----------------


// Font fix
body {
  -webkit-animation-duration: 0.1s;
  -webkit-animation-name: fontfix;
  -webkit-animation-iteration-count: 1;
  -webkit-animation-timing-function: linear;
  -webkit-animation-delay: 0.1s;
}

@-webkit-keyframes fontfix {
  from { opacity: 1; }
  to { opacity: 1; }
}

// ----------------MIXINS----------------


vendor-blur(blurAmt)
  -webkit-filter blur(blurAmt)
  -moz-filter blur(blurAmt)
  -o-filter blur(blurAmt)
  -ms-filter blur(blurAmt)
  filter blur(blurAmt)
  
vendor-transition-property(properties)
  -webkit-transition-property unquote(properties)
  -moz-transition-property unquote(properties)
  -o-transition-property unquote(properties)
  transition-property unquote(properties)

vendor-transition-duration(duration)
  -webkit-transition-duration duration
  -moz-transition-duration duration
  -o-transition-duration duration
  transition-duration duration

vendor-transition-timing-function(t-function)
  -webkit-transition-timing t-function
  -moz-transition-timing t-function
  -o-transition-timing t-function
  transition-timing t-function

vendor-transition-delay(delay)
  -webkit-transition-delay delay;
  -moz-transition-delay delay;
  -o-transition-delay delay;
  transition-delay delay;

// ----------------END MIXINS----------------


// ----------------RULES------------------

html, body
  height 100%
  width 100%
  
// Begin background stuff

.site-background
  background-image url('images/cube1-960x543.JPG')
  background-size cover
  height -moz-calc(100% + 10px);
  height -webkit-calc(100% + 10px);
  height -o-calc(100% + 10px);
  height calc(100% + 10px);
  width -moz-calc(100% + 20px);
  width -webkit-calc(100% + 20px);
  width -o-calc(100% + 20px);
  width calc(100% + 20px);
  margin-top -5px
  margin-right -10px
  margin-bottom -5px
  margin-left -10px
  vendor-blur(5px)
  
  
.site-background-frame
  overflow hidden
  z-index 1
  height 100%
  width 100%

.site-foreground
  height 100%
  width 100%
  position absolute
  left 0
  top 0
  z-index 2
  
// End background stuff

// Begin logo

.logo
  line-height 150%
  font-family 'Josefin Sans', sans-serif
  font-weight 400
  color #608de6
  position absolute
  top 0px
  vendor-transition-property("top")
  vendor-transition-timing-function(ease-in-out)
  vendor-transition-duration(0.4s)
  vendor-transition-delay(0s)
  
  &.welcome_position
    top 160px
    vendor-transition-delay(0,4s)
    
  @media (max-width: $screen-xs-max)
    font-size 32px
    padding-left 8px
  @media (min-width: $screen-sm)
    font-size 40px
    padding-left 8px

  ul
    list-style none
    margin 0px
    padding 0px
    
    a
      color #83a6ec
      text-decoration none
      &:hover
        color #A4BEF1
        text-decoration underline
      &:active
        text-decoration underline

    & > li 
      display inline


      &:before 
        content " | "

      &:nth-child(1)
        a
          color #608de6
          text-decoration none
          &:hover
            color #608de6
            text-decoration underline
          &:active
            text-decoration underline

        &:before
          content ""
  
// End logo

// Begin logo descriptor

.logo-descriptor
  line-height 150%
  font-family 'Josefin Sans', sans-serif
  font-weight 600
  font-size 32px
  color #afa7d4
  padding-left 8px
  position absolute
  top 220px

  
  &.ng-hide-remove
    display block !important
    vendor-transition-delay(0.4s)
    vendor-transition-property("opacity")
    vendor-transition-timing-function(ease-in-out)
    vendor-transition-duration(0.3s)
    opacity 0
    
  &.ng-hide-remove-active
    opacity 1

  &.ng-hide-add
    display block !important
    vendor-transition-delay(0s)
    vendor-transition-property("opacity")
    vendor-transition-timing-function(ease-in-out)
    vendor-transition-duration(0.2s)
    opacity 1
    
  &.ng-hide-add-active
    opacity 0
    
// End logo descriptor

// Begin navbar

.navbar
  position absolute
  top 60px
  width 100%
  margin-bottom 0
  background-color #180a48
  background-image: url(http://www.transparenttextures.com/patterns/otis-redding.png)
  
  &.ng-hide-remove
    display block !important
    vendor-transition-delay(0.4s)
    vendor-transition-property("opacity")
    vendor-transition-timing-function(ease-in-out)
    vendor-transition-duration(0.2s)
    opacity 0
  
  &.ng-hide-remove-active
    opacity 1

  &.ng-hide-add
    display block !important
    vendor-transition-delay(0s)
    vendor-transition-property("opacity")
    vendor-transition-timing-function(ease-in-out)
    vendor-transition-duration(0.2s)
    opacity 1
      
  &.ng-hide-add-active
    opacity 0
    
// Begin landing page stuff

.content-box
  $content-box-top = 112px
  position absolute
  top 110px
  height -o-calc(100% - $content-box-top)
  height -webkit-calc(100% - $content-box-top)
  height calc(100% - $content-box-top)
  width 100%
  

.landing-right
  background-color #674c5c
  background-image: url(http://www.transparenttextures.com/patterns/otis-redding.png)
  border-radius 12px
  box-shadow 1px 1px 1px 1px #4c3845 inset
  position absolute
  margin 16px
  right 0px
  width 448px
  padding 16px 24px 16px 24px
  
.landing-left
  background-color #555555
  position absolute
  margin 16px
  left 0px
  
